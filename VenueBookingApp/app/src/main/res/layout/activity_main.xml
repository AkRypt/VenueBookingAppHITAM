<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/hitam_bg">

    <View
        android:id="@+id/midV"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/venuesCard"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_toStartOf="@id/midV"
        app:cardCornerRadius="20dp"
        app:cardElevation="1dp"
        android:onClick="mainMenuClick"
        app:cardBackgroundColor="#9900574B">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:src="@drawable/venueicon"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:text="Venues"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:fontFamily="@font/comfortaa"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/summaryCard"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/venuesCard"
        android:layout_toEndOf="@id/midV"
        app:cardCornerRadius="20dp"
        app:cardElevation="1dp"
        android:onClick="mainMenuClick"
        app:cardBackgroundColor="#9900574B">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_table"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:text="Available Slots"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:fontFamily="@font/comfortaa"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>