<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/hitamPic"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:src="@drawable/hitam_info_pic"
            android:scaleType="centerCrop"
            android:elevation="4dp"/>

        <TextView
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hitamPic"
            android:textColor="@android:color/black"
            android:fontFamily="@font/exo"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="10dp"
            android:textSize="18sp"
            android:text="Made By: Akshit Dayal - 2019"/>
        <TextView
            android:id="@+id/photographer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/author"
            android:textColor="@android:color/black"
            android:fontFamily="@font/exo"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="10dp"
            android:textSize="18sp"
            android:text="Photography By: Abhishek Raj"/>

        <TextView
            android:id="@+id/project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/photographer"
            android:textColor="@android:color/black"
            android:fontFamily="@font/exo"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="10dp"
            android:textSize="17sp"
            android:text="Project By: CSE Department"/>
        <TextView
            android:id="@+id/project1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/project"
            android:textColor="@android:color/black"
            android:fontFamily="@font/exo"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="10dp"
            android:textSize="17sp"
            android:text="Initiative By: Dr. Ila Chandana [HOD - CSE]"/>

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/project1"
            android:textColor="@android:color/black"
            android:fontFamily="@font/exo"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="10dp"
            android:textSize="16sp"
            android:layout_marginBottom="40dp"
            android:text="Description:
            \nAs all the faculty members were facing trouble while booking the rooms because many a times,
the bookings are clashed and there's ambiguity. Hence, the department of CSE has decided to make an
app to overcome this issue where once a venue is booked, it's freezed and cannot be booked again
by anybody else."/>

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desc"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="Logout"
            android:background="@drawable/back_fab"
            android:textColor="@android:color/white"/>

    </RelativeLayout>
</ScrollView>